---
import PageLayout from '~/layouts/PageLayout.astro';
import { getPermalink, getAsset } from '~/utils/permalinks';
import { portfolioProjects } from '~/data/portfolio';

const metadata = {
  title: 'Portfolio',
  description: 'Selected interior styling and consultation work by Thyra Löwenmark.',
};
---

<PageLayout metadata={metadata}>
  <section class="mx-auto max-w-6xl px-6 py-14 md:py-20">
    <h1 class="text-4xl font-semibold md:text-5xl">Portfolio</h1>
    <p class="mt-5 max-w-3xl text-lg opacity-90">
      A selection of work and outcomes. Thyra’s approach prioritises function and calm—then builds warmth through
      texture, lighting, and intentional details.
    </p>

    <div class="mt-10 grid gap-6 sm:grid-cols-2 lg:grid-cols-3">
      {portfolioProjects.map((p) => (
        <a class="rounded-3xl border p-5 hover:opacity-95" href={getPermalink(`/portfolio/${p.slug}`)}>
          <img
            class="aspect-[16/11] w-full rounded-2xl object-cover"
            src={getAsset(p.coverImage)}
            alt={p.title}
            loading="lazy"
          />
          <div class="mt-4">
            <h2 class="text-lg font-semibold">{p.title}</h2>
            <p class="mt-2 text-sm opacity-90">{p.summary}</p>
            <div class="mt-4 flex flex-wrap gap-2">
              {p.tags.map((t) => (
                <span class="rounded-full border px-3 py-1 text-xs opacity-90">{t}</span>
              ))}
            </div>
            <p class="mt-4 text-sm underline">View details</p>
          </div>
        </a>
      ))}
    </div>

    <div class="mt-12 rounded-3xl border p-8">
      <h2 class="text-2xl font-semibold">Want a plan for your space?</h2>
      <p class="mt-3 max-w-3xl text-sm opacity-90">
        The fastest way to make progress is a focused consultation. Bring photos, questions, and constraints—leave with
        a plan.
      </p>
      <a class="mt-6 inline-block rounded-2xl bg-black px-6 py-3 font-medium text-white hover:opacity-90" href={getPermalink('/contact')}>
        Book a consultation
      </a>
    </div>
  </section>
</PageLayout>
