---
import '@fontsource-variable/inter';

// 'DM Sans'
// Nunito
// Dosis
// Outfit
// Roboto
// Literata
// 'IBM Plex Sans'
// Karla
// Poppins
// 'Fira Sans'
// 'Libre Franklin'
// Inconsolata
// Raleway
// Oswald
// 'Space Grotesk'
// Urbanist
---

<style is:inline>
  :root {
    --aw-font-sans: 'Inter Variable';
    --aw-font-serif: 'Inter Variable';
    --aw-font-heading: 'Inter Variable';
  
    /* Brand (warm moss / olive) */
    --aw-color-primary: rgb(110 132 58);   /* moss */
    --aw-color-secondary: rgb(90 110 48);  /* deeper moss */
    --aw-color-accent: rgb(166 145 72);    /* warm olive-gold accent */
  
    --aw-color-text-heading: rgb(18 18 18);
    --aw-color-text-default: rgb(24 24 24);
    --aw-color-text-muted: rgb(24 24 24 / 66%);
  
    /* Page background (warm, sunny, slightly green-tinted off-white) */
    --aw-color-bg-page: rgb(248 246 236);
  
    /* Used by some components as "dark background token" even in light mode contexts */
    --aw-color-bg-page-dark: rgb(12 18 12);
  
    ::selection {
      background-color: rgb(216 227 190); /* soft sage highlight */
    }
  }
  
  .dark {
    --aw-font-sans: 'Inter Variable';
    --aw-font-serif: 'Inter Variable';
    --aw-font-heading: 'Inter Variable';
  
    /* Brighter primary for contrast in dark mode */
    --aw-color-primary: rgb(154 179 93);
    --aw-color-secondary: rgb(110 132 58);
    --aw-color-accent: rgb(200 177 98);
  
    --aw-color-text-heading: rgb(246 246 244);
    --aw-color-text-default: rgb(233 233 228);
    --aw-color-text-muted: rgb(233 233 228 / 66%);
  
    /* Dark background (green-black, not navy) */
    --aw-color-bg-page: rgb(12 18 12);
  
    ::selection {
      background-color: rgb(216 227 190);
      color: rgb(12 18 12);
    }
  }

</style>
