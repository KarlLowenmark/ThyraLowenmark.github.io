---
import '@fontsource-variable/inter';

// 'DM Sans'
// Nunito
// Dosis
// Outfit
// Roboto
// Literata
// 'IBM Plex Sans'
// Karla
// Poppins
// 'Fira Sans'
// 'Libre Franklin'
// Inconsolata
// Raleway
// Oswald
// 'Space Grotesk'
// Urbanist
---

<style is:inline>
  :root {
    --aw-font-sans: 'Inter Variable';
    --aw-font-serif: 'Inter Variable';
    --aw-font-heading: 'Inter Variable';

     /* Dark blue */
 #   --aw-color-primary: rgb(1 97 239);
 #   --aw-color-secondary: rgb(1 84 207);
 #   --aw-color-accent: rgb(109 40 217);
 #   --aw-color-bg-page: rgb(255 255 255);
 #   --aw-color-bg-page-dark: rgb(3 6 32);
    
    /* Muted green brand */
    --aw-color-primary: rgb(21 128 61);
    --aw-color-secondary: rgb(16 105 50);
    --aw-color-accent: rgb(20 83 45);
    
    /* Calm, light sage background */
    --aw-color-bg-page: rgb(248 250 247);

    /* Optional: if any component uses bg-page-dark in light mode contexts */
    --aw-color-bg-page-dark: rgb(6 18 14);


    --aw-color-text-heading: rgb(0 0 0);
    --aw-color-text-default: rgb(16 16 16);
    --aw-color-text-muted: rgb(16 16 16 / 66%);


    ::selection {
      background-color: lavender;
    }
  }

  .dark {
    --aw-font-sans: 'Inter Variable';
    --aw-font-serif: 'Inter Variable';
    --aw-font-heading: 'Inter Variable';

    /* Dark blue */
    # --aw-color-primary: rgb(1 97 239);
    # --aw-color-secondary: rgb(1 84 207);
    # --aw-color-accent: rgb(109 40 217);
    # --aw-color-bg-page: rgb(3 6 32);

    /* Keep the same muted green brand in dark mode */
    --aw-color-primary: rgb(34 197 94);     /* brighter for contrast on dark */
    --aw-color-secondary: rgb(21 128 61);
    --aw-color-accent: rgb(74 222 128);
    
    /* Deep green-black background  */
    --aw-color-bg-page: rgb(6 18 14);


    --aw-color-text-heading: rgb(247, 248, 248);
    --aw-color-text-default: rgb(229 236 246);
    --aw-color-text-muted: rgb(229 236 246 / 66%);


    ::selection {
      background-color: black;
      color: snow;
    }
  }
</style>
